{% extends 'base.html.twig' %}

{% block title %}Clients{% endblock %}

{% block body %}
    <h1>Clients</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ client.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ client.name }}</td>
            </tr>
            <tr>
                <th>Last_name</th>
                <td>{{ client.lastName }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ client.email }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ client.phone }}</td>
            </tr>
            <tr>
                <th>Credit_card_number</th>
                <td>{{ client.creditCardNumber }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('clients_index') }}" class="float-right">back to list</a>

    <a href="{{ path('clients_edit', {'id': client.id}) }}" class="btn btn-primary float-left">edit</a>

    {{ include('clients/_delete_form.html.twig') }}
{% endblock %}
